<% if @comment.errors.present? %>
  $('<%= "##{@commentable.class.to_s.downcase}_#{@commentable.id} .comments .new_comment_form" %>').html('<%= j render partial: 'comments/form', locals: {commentable: @commentable, comment: @comment} %>');
<% else %>
  $('<%= "##{@commentable.class.to_s.downcase}_#{@commentable.id} .comments" %>').html('<%= j render partial: 'comments/list', locals: {commentable: @commentable} %>');
<% end %>