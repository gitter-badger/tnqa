<h2>
  <%= @question.title %>
  <% if @question.user == current_user %>
    <small><%= link_to 'Edit', edit_question_path(@question) %></small>
  <% end %>
</h2>
<p><%= @question.content %></p>

<h4>Comments:</h4>
<ul>
  <div class="row">
    <%= form_for(Comment.new, url: question_comments_path(@question), remote: true) do |f| %>
      <div class="form-group">
        <%= f.label :content, 'Leave your Comment here' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="actions">
        <%=f.submit "Save", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div id="comments_<%= dom_id(@question) %>">
    <%= render @question.comments.order(:id => :desc) %>
  </div>
</ul>

<h4>Answers:</h4>
<ol>
  <div class="row">
    <%= form_for(Answer.new, url: question_answers_path(@question), remote: true) do |f| %>
      <div class="form-group">
        <%= f.label :content, 'Leave your Answer here' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="actions">
        <%=f.submit "Save", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div id="answers_<%= dom_id(@question) %>">
    <%= render @question.answers.order(:id => :desc) %>
  </div>
</ol>
